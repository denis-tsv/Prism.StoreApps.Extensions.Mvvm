<UserControl
    x:Class="Sample.App.Flyouts.AddProductFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Prism.StoreApps.Extensions.UI.Views"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <StackPanel Orientation="Vertical">
            <views:ViewModelPresenter ViewModel="{Binding DetailsRegionViewModel}"  />
            <Button Content="Done" Command="{Binding ConfirmCommand}" HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>
</UserControl>
