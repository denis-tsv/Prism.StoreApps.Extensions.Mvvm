<UserControl
    x:Class="Sample.App.Regions.DetailsRegion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <StackPanel>
        <TextBlock Text="{Binding Header}" FontSize="20" FontWeight="Bold" />
        <TextBlock Margin="0,10,0,0" Text="Name" />
        <TextBox Text="{Binding Product.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="150" />
    </StackPanel>
</UserControl>
